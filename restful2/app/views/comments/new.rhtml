<% form_for :comment, :url => comment_url, :article_id => @article_id do |form| %>
<fieldset>
  <legend>Add a Comment</legend>
	
  <%= render :partial => 'form', :object => form %>

  <p>
    <%= submit_tag "Create" %>
  </p>
</fieldset>
<% end %>


